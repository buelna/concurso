{% extends '::base.html.twig' %}

{% block content %}
	<div class="row">

		<h1 align="center">Editar equipo</h1>

		<div class="large-6 columns" >
    		{{ form_start(form, { 'action': path('equipo_edit', { 'id': entity.id }), 'method': 'PUT' }) }} 
                {{ form_label(form.nombre, 'Nombre del equipo') }}
                {{ form_widget(form.nombre) }}
                {{ form_label(form.preparatoria, 'Preparatoria de procedencia') }}
                {{ form_widget(form.preparatoria) }}
                <br>
                <p hidden>{{ form_widget(form.idUsuario) }}</p>
                <input type="submit" value="Save" >
                 <br>
            {{ form_end(form) }}
		</div>
	</div>    

        
{% endblock %}
